{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"env.d.ts",
		"components.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.vue"
	],
	"exclude": [
		"src/**/__tests__/*"
	],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"allowJs": true,
		"types": [
			"vite-plugin-pwa/client",
			"vitest/importMeta"
		],
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		]
	}
}